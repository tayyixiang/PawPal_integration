@page "/shelters/delete"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Delete Shelter</PageTitle>

<h1>Delete Shelter</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <hr />
    @if (Shelter is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Shelter.Name</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Shelter.Address</dd>
        </dl>

        <EditForm Method="Post" Model="Shelter" OnValidSubmit="DeleteShelter" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(Shelter is null)">Delete</button> |
            <a href="/shelters">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Shelter? Shelter;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Shelter = await Context.Shelters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Shelter is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteShelter()
    {
        if (Shelter != null)
        {
            Context.Shelters.Remove(Shelter);
            await Context.SaveChangesAsync();
        }
        NavigationManager.NavigateTo("/shelters");
    }
}