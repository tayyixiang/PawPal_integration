@page "/shelters/details"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Shelter Details</PageTitle>

<h1>Shelter Details</h1>

<div>
    <hr />
    @if (Shelter is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Shelter.Name</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Shelter.Address</dd>
        </dl>
        <div>
            <AuthorizeView Roles="Administrator">
                <a href="@($"shelters/edit?id={Shelter.Id}")">Edit</a> |
            </AuthorizeView>
            <a href="/shelters">Back to List</a>
        </div>
    }
</div>

@code {
    private Shelter? Shelter;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Shelter = await Context.Shelters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Shelter is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}