@page "/shelters/edit"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Edit Shelter</PageTitle>

<h1>Edit Shelter</h1>

<hr />
@if (Shelter is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Method="Post" Model="Shelter" OnValidSubmit="UpdateShelter" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary />
                <input type="hidden" name="Shelter.Id" value="@Shelter.Id" />

                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Shelter.Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <InputText id="address" @bind-Value="Shelter.Address" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/shelters" class="btn btn-secondary">Cancel</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Shelter? Shelter { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Shelter ??= await Context.Shelters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Shelter is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateShelter()
    {
        if (Shelter != null)
        {
            Context.Attach(Shelter).State = EntityState.Modified;
            await Context.SaveChangesAsync();
            NavigationManager.NavigateTo("/shelters");
        }
    }
}