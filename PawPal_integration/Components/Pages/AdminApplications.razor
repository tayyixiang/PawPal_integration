@page "/admin/applications"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Admin - Adoption Applications</PageTitle>

<h1>Adoption Applications</h1>

@if (Applications == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Pet</th>
                <th>Applicant</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Applications)
            {
                <tr>
                    <td>@app.ApplicationDate.ToShortDateString()</td>
                    <td>@(app.Pet != null ? app.Pet.Name : "Unknown")</td>
                    <td>@app.FullName</td>
                    <td>
                        <span class="badge @GetStatusBadge(app.Status)">@app.Status</span>
                    </td>
                    <td>
                        <a href="admin/applications/review/@app.Id" class="btn btn-primary btn-sm">Review</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AdoptionApplication> Applications;

    protected override async Task OnInitializedAsync()
    {
        // Load all applications with Pet details
        Applications = await Context.AdoptionApplications
            .Include(a => a.Pet)
            .OrderByDescending(a => a.ApplicationDate)
            .ToListAsync();
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}