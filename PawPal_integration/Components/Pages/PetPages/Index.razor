@page "/admin/pets"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Admin - Manage Pets</PageTitle>

<h1>Manage Pets</h1>

<p>
    <a href="pets/create" class="btn btn-primary">Create New</a>
</p>

@if (Pets == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Breed</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in Pets)
            {
                <tr>
                    <td>
                        <img src="@(string.IsNullOrEmpty(pet.ImageUrl) ? "https://placehold.co/100" : pet.ImageUrl)" width="50" height="50" style="object-fit:cover" />
                    </td>
                    <td>@pet.Name</td>
                    <td>@pet.Breed</td>
                    <td>Available</td>
                    <td>
                        <a href="@($"pets/edit?id={pet.Id}")">Edit</a> |
                        <a href="@($"pets/details?id={pet.Id}")">Details</a> |
                        <a href="@($"pets/delete?id={pet.Id}")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    // Fix: Initialize list to prevent CS8618 warning
    private List<Pet> Pets = new();

    protected override async Task OnInitializedAsync() => Pets = await Context.Pets.ToListAsync();
}