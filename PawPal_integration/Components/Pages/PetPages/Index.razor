@page "/admin/pets"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Admin - Manage Pets</PageTitle>

<h1>Manage Pets</h1>
<p><a href="admin/pets/create" class="btn btn-primary">Create New</a></p>

@if (Pets == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Name</th><th>Breed</th><th>Actions</th></tr>
        </thead>
        <tbody>
            @foreach (var pet in Pets)
            {
                <tr>
                    <td>@pet.Name</td>
                    <td>@pet.Breed</td>
                    <td>
                        <a href="admin/pets/edit?id=@pet.Id">Edit</a> |
                        <a href="admin/pets/details?id=@pet.Id">Details</a> |
                        <a href="admin/pets/delete?id=@pet.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Pet> Pets = new();
    protected override async Task OnInitializedAsync() => Pets = await Context.Pets.ToListAsync();
}