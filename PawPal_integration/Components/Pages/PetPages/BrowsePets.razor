@page "/pets"
@using Microsoft.EntityFrameworkCore
@using PawPal_integration.Domain
@using PawPal_integration.Data
@using PawPal_integration.Components.Layout
@inject PawPalContext Context
@layout MainLayout

<PageTitle>Browse Pets</PageTitle>

<div class="container py-4">
    <h2>Find a Pet</h2>
    <div class="row g-4 mt-2">
        @if (Pets != null)
        {
            @foreach (var p in Pets)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrEmpty(p.ImageUrl) ? "https://placehold.co/400" : p.ImageUrl)" class="card-img-top" style="height: 250px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="text-muted">@p.Breed</p>
                            <a href="pets/@p.Id" class="btn btn-success w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<Pet> Pets = new();
    protected override async Task OnInitializedAsync() => Pets = await Context.Pets.ToListAsync();
}