@page "/appointments"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@attribute [Authorize]

<PageTitle>Appointments</PageTitle>

<h1>Appointments</h1>

<p>
    <a href="appointments/create" class="btn btn-primary">Book New</a>
</p>

@if (Appointments == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Pet</th>
                <th>Shelter</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Appointments)
            {
                <tr>
                    <td>@item.AppointmentDate.ToString("g")</td>

                    <td>@(item.Pet?.Name ?? "Unknown")</td>

                    <td>@(item.Pet?.Shelter?.Name ?? "Unknown")</td>

                    <td>@item.Status</td>
                    <td>
                        <a href="@($"appointments/edit?id={item.Id}")">Edit</a> |
                        <a href="@($"appointments/details?id={item.Id}")">Details</a> |
                        <a href="@($"appointments/delete?id={item.Id}")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Appointment> Appointments = new();

    protected override async Task OnInitializedAsync()
    {
        Appointments = await Context.Appointments
            .Include(a => a.Pet)
                .ThenInclude(p => p.Shelter) // Load Pet first, then Shelter
            .ToListAsync();
    }
}