@page "/admin/applications"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using PawPal_integration.Domain
@using PawPal_integration.Data
@inject PawPalContext Context
@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Adoption Applications</PageTitle>

<div class="container py-4">
    <h2 class="fw-bold mb-4">Adoption Applications</h2>

    @if (Apps == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Applicant</th>
                            <th>Pet</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Apps)
                        {
                            <tr>
                                <td>@item.ApplicationDate.ToShortDateString()</td>
                                <td>@item.FullName</td>
                                <td>@(item.Pet?.Name ?? "Unknown")</td>
                                <td>
                                    <span class="badge @(item.Status == "Pending" ? "bg-warning text-dark" : item.Status == "Approved" ? "bg-success" : "bg-danger")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="admin/applications/review/@item.Id" class="btn btn-sm btn-primary">Review</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<AdoptionApplication> Apps;

    protected override async Task OnInitializedAsync()
    {
        Apps = await Context.AdoptionApplications
            .Include(a => a.Pet)
            .OrderByDescending(a => a.ApplicationDate)
            .ToListAsync();
    }
}